{
    "Algorithme": {
        "prefix": "algo",
        "body": [
            "algorithme ${1:NomAlgorithme}",
            "",
            "variables",
            "    ${2:variable} : ${3:entier}",
            "",
            "début",
            "    ${4:// Code ici}",
            "fin"
        ],
        "description": "Structure de base d'un algorithme"
    },
    "Fonction": {
        "prefix": "fonction",
        "body": [
            "fonction ${1:nom}(${2:param} : ${3:entier}) : ${4:entier}",
            "début",
            "    ${5:// Code}",
            "    retourner ${6:resultat}",
            "fin"
        ],
        "description": "Définir une fonction"
    },
    "Procédure": {
        "prefix": "procedure",
        "body": [
            "procédure ${1:nom}(${2:param} : ${3:entier})",
            "début",
            "    ${4:// Code}",
            "fin"
        ],
        "description": "Définir une procédure"
    },
    "Si Alors": {
        "prefix": "si",
        "body": [
            "si ${1:condition} alors",
            "    ${2:// Code}",
            "finsi"
        ],
        "description": "Structure conditionnelle si"
    },
    "Si Alors Sinon": {
        "prefix": "sisi",
        "body": [
            "si ${1:condition} alors",
            "    ${2:// Code si vrai}",
            "sinon",
            "    ${3:// Code si faux}",
            "finsi"
        ],
        "description": "Structure conditionnelle si-sinon"
    },
    "Pour": {
        "prefix": "pour",
        "body": [
            "pour ${1:i} de ${2:0} à ${3:10} faire",
            "    ${4:// Code}",
            "finpour"
        ],
        "description": "Boucle pour"
    },
    "Tantque": {
        "prefix": "tantque",
        "body": [
            "tantque ${1:condition} faire",
            "    ${2:// Code}",
            "fintantque"
        ],
        "description": "Boucle tantque"
    },
    "Repeter": {
        "prefix": "repeter",
        "body": [
            "repeter",
            "    ${1:// Code}",
            "jusqua ${2:condition}"
        ],
        "description": "Boucle repeter-jusqua"
    },
    "Tableau": {
        "prefix": "tableau",
        "body": [
            "${1:tab} : tableau[${2:10}] de ${3:entier}"
        ],
        "description": "Déclarer un tableau"
    },
    "Ecrire": {
        "prefix": "ecrire",
        "body": [
            "écrire(${1:message})"
        ],
        "description": "Afficher un message"
    },
    "Ecrireln": {
        "prefix": "ecrireln",
        "body": [
            "écrireln(${1:valeur1}, ${2:valeur2})"
        ],
        "description": "Afficher plusieurs valeurs"
    },
    "Lire": {
        "prefix": "lire",
        "body": [
            "lire(${1:variable})"
        ],
        "description": "Lire une valeur"
    },
    "Variables": {
        "prefix": "var",
        "body": [
            "${1:nom} : ${2:entier}"
        ],
        "description": "Déclarer une variable"
    },
    "Commentaire ligne": {
        "prefix": "//",
        "body": [
            "// ${1:commentaire}"
        ],
        "description": "Commentaire sur une ligne"
    },
    "Commentaire bloc": {
        "prefix": "/*",
        "body": [
            "/*",
            " * ${1:commentaire}",
            " */"
        ],
        "description": "Commentaire sur plusieurs lignes"
    },
    "Commentaire hash": {
        "prefix": "#",
        "body": [
            "# ${1:commentaire}"
        ],
        "description": "Commentaire style Python"
    },
    "Variables block": {
        "prefix": "variables",
        "body": [
            "variables",
            "    ${1:nom} : ${2:entier}"
        ],
        "description": "Bloc de déclaration de variables"
    },
    "Constantes": {
        "prefix": "const",
        "body": [
            "constantes",
            "    ${1:NOM} : ${2:entier} = ${3:valeur}"
        ],
        "description": "Bloc de déclaration de constantes"
    },
    "Constante simple": {
        "prefix": "constante",
        "body": [
            "${1:NOM} : ${2:entier} = ${3:valeur}"
        ],
        "description": "Déclarer une constante"
    },
    "Division entière": {
        "prefix": "div",
        "body": [
            "${1:a} div ${2:b}"
        ],
        "description": "Division entière"
    },
    "Modulo": {
        "prefix": "mod",
        "body": [
            "${1:a} mod ${2:b}"
        ],
        "description": "Opérateur modulo"
    },
    "Variable caractere": {
        "prefix": "car",
        "body": [
            "${1:c} : caractere"
        ],
        "description": "Déclarer une variable caractère"
    },
    "Fonction ord": {
        "prefix": "ord",
        "body": [
            "ord(${1:caractere})"
        ],
        "description": "Convertir caractère en code ASCII"
    },
    "Fonction chr": {
        "prefix": "chr",
        "body": [
            "chr(${1:code})"
        ],
        "description": "Convertir code ASCII en caractère"
    },
    "Fonction min": {
        "prefix": "min",
        "body": [
            "min(${1:a}, ${2:b})"
        ],
        "description": "Minimum de deux valeurs"
    },
    "Fonction max": {
        "prefix": "max",
        "body": [
            "max(${1:a}, ${2:b})"
        ],
        "description": "Maximum de deux valeurs"
    },
    "Fonction contient": {
        "prefix": "contient",
        "body": [
            "contient(${1:texte}, ${2:sous_chaine})"
        ],
        "description": "Vérifie si texte contient sous_chaine"
    },
    "Fonction estVide": {
        "prefix": "estvide",
        "body": [
            "estVide(${1:chaine})"
        ],
        "description": "Vérifie si chaîne est vide"
    },
    "Fonction estLettre": {
        "prefix": "estlettre",
        "body": [
            "estLettre(${1:caractere})"
        ],
        "description": "Vérifie si c'est une lettre"
    },
    "Fonction estChiffre": {
        "prefix": "estchiffre",
        "body": [
            "estChiffre(${1:caractere})"
        ],
        "description": "Vérifie si c'est un chiffre"
    },
    "Fonction versMajuscule": {
        "prefix": "versmajuscule",
        "body": [
            "versMajuscule(${1:caractere})"
        ],
        "description": "Convertir en majuscule"
    },
    "Fonction versMinuscule": {
        "prefix": "versminuscule",
        "body": [
            "versMinuscule(${1:caractere})"
        ],
        "description": "Convertir en minuscule"
    },
    "Fonction versEntier": {
        "prefix": "versentier",
        "body": [
            "versEntier(${1:valeur})"
        ],
        "description": "Convertir en entier"
    },
    "Fonction versReel": {
        "prefix": "versreel",
        "body": [
            "versReel(${1:valeur})"
        ],
        "description": "Convertir en réel"
    },
    "Fonction versChaine": {
        "prefix": "verschaine",
        "body": [
            "versChaine(${1:valeur})"
        ],
        "description": "Convertir en chaîne"
    },
    "Fonction position": {
        "prefix": "position",
        "body": [
            "position(${1:texte}, ${2:sous_chaine})"
        ],
        "description": "Trouver position d'une sous-chaîne"
    },
    "Selon": {
        "prefix": "selon",
        "body": [
            "selon(${1:expression})",
            "    cas ${2:valeur1}: ${3:instruction1}",
            "    cas ${4:valeur2}: ${5:instruction2}",
            "    defaut: ${6:instructionDefaut}",
            "finselon"
        ],
        "description": "Structure selon (switch)"
    },
    "Selon simple": {
        "prefix": "selons",
        "body": [
            "selon(${1:variable})",
            "    cas ${2:1}: ${3:ecrireln(\"Cas 1\")}",
            "    cas ${4:2}: ${5:ecrireln(\"Cas 2\")}",
            "    defaut: ${6:ecrireln(\"Autre\")}",
            "finselon"
        ],
        "description": "Structure selon simple"
    },
    "Selon menu": {
        "prefix": "selonmenu",
        "body": [
            "ecrireln(\"=== MENU ===\")",
            "ecrireln(\"1. ${1:Option 1}\")",
            "ecrireln(\"2. ${2:Option 2}\")",
            "ecrireln(\"3. ${3:Option 3}\")",
            "ecrire(\"Votre choix: \")",
            "lire(${4:choix})",
            "",
            "selon(${4:choix})",
            "    cas 1: ${5:ecrireln(\"Option 1 sélectionnée\")}",
            "    cas 2: ${6:ecrireln(\"Option 2 sélectionnée\")}",
            "    cas 3: ${7:ecrireln(\"Option 3 sélectionnée\")}",
            "    defaut: ${8:ecrireln(\"Choix invalide\")}",
            "finselon"
        ],
        "description": "Menu interactif avec selon"
    },
    "Cas": {
        "prefix": "cas",
        "body": [
            "cas ${1:valeur}: ${2:instruction}"
        ],
        "description": "Un cas dans une structure selon"
    },
    "Defaut": {
        "prefix": "defaut",
        "body": [
            "defaut: ${1:instruction}"
        ],
        "description": "Cas par défaut dans selon"
    }
}
