// Exemples d'algorithmes pour tester les messages d'erreur de débogage

// ====================================
// EXEMPLE 1 : Erreur de syntaxe (manque 'alors')
// ====================================
algorithme ErreurSyntaxe1
variables
    x : entier
debut
    x = 5
    si x == 5
        ecrire("cinq")  // ERREUR : manque 'alors' après la condition
    finsi
fin

// Message d'erreur attendu :
// ParseException: Erreur de parsing : Attendu ALORS, mais trouvé IDENTIFICATEUR (ligne 7, token='ecrire')


// ====================================
// EXEMPLE 2 : Type de variable invalide
// ====================================
algorithme ErreurType
variables
    x : nombre_invalide  // ERREUR : type invalide
debut
    x = 5
fin

// Message d'erreur attendu :
// ParseException: Erreur de parsing : Type de variable invalide (ligne 3, token='nombre_invalide')


// ====================================
// EXEMPLE 3 : Manque 'à' dans boucle pour
// ====================================
algorithme ErreurBouclePour
variables
    i : entier
debut
    pour i de 1 jusqu 10 faire  // ERREUR : devrait être 'à' pas 'jusqu'
        ecrire(i)
    finpour
fin

// Message d'erreur attendu :
// ParseException: Erreur de parsing : Attendu 'à' après 'de' dans la boucle 'pour', trouvé jusqu (ligne 5, token='jusqu')


