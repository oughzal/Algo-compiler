// ====================================
// EXEMPLE 7 : Manque opérateur d'affectation
// ====================================
algorithme ErreurAffectation
variables
    x : entier
debut
    x 5  // ERREUR : manque '='
fin

// Message d'erreur attendu :
// ParseException: Erreur de parsing : Attendu '=' ou '[' ou '(' après l'identificateur (ligne 5, token='5')


// ====================================
// EXEMPLE CORRECT : Algorithme valide
// ====================================
algorithme AlgorithmeCorrect
variables
    x, y, z : entier
    i, j : entier
    M : tableau[2][2] de entier
debut
    // Affectations simples
    x = 5
    y = 10
    z = x + y

    // Condition
    si z > 10 alors
        ecrireln("z est supérieur à 10")
    sinonsi z == 10 alors
        ecrireln("z est égal à 10")
    sinon
        ecrireln("z est inférieur à 10")
    finsi

    // Boucle for
    pour i de 1 à 5 faire
        ecrire(i)
        ecrire(" ")
    finpour
    ecrireln()

    // Matrice
    pour i de 0 à 1 faire
        pour j de 0 à 1 faire
            M[i][j] = i * 2 + j
            ecrire(M[i][j])
            ecrire(" ")
        finpour
        ecrireln()
    finpour

    // Expression complexe
    z = (x + y) * (x - y) + x ** 2
    ecrireln("Résultat : ", z)
fin

// Ce programme devrait s'exécuter sans erreur

